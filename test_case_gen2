# Test Case Generator

feature_name = input("Enter the feature name: ")
num_cases = input("How many test cases do you need? ")

num_cases = int(num_cases)

with open("test_cases.txt", "w") as file:
    file.write(f"Test Cases for: {feature_name}\n")
    file.write("=" * 50 + "\n\n")
    
    for i in range(1, num_cases + 1):
        file.write(f"Test Case #{i}\n")
        file.write("-" * 30 + "\n")
        file.write("Description: \n")
        file.write("Preconditions: \n")
        file.write("Steps: \n")
        file.write("Expected Result: \n")
        file.write("Actual Result: \n")
        file.write("Status: \n")
        file.write("\n")

print(f"âœ“ Created {num_cases} test case templates in 'test_cases.txt'")